{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build SFML",
      "type": "shell",
      "command": "g++",
      "args": [
        "main.cpp",
        "application.cpp",
        "MenuState.cpp",
        "DifficultyState.cpp",
        "ManualState.cpp",
        "Button.cpp",
        "StateStack.cpp",
        "-std=c++20",
        "-IC:/msys64/mingw64/include",
        "-LC:/msys64/mingw64/lib",
        "-lsfml-graphics",
        "-lsfml-window",
        "-lsfml-system",
        "-o",
        "main.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}