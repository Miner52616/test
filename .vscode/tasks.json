{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build SFML",
      "type": "shell",
      "command": "g++",
      "args": [
        "src/main.cpp",
        "src/core/application.cpp",
        "src/core/state.cpp",
        "src/states/MenuState.cpp",
        "src/states/DifficultyState.cpp",
        "src/states/ManualState.cpp",
        "src/states/GameState.cpp",
        "src/states/PauseState.cpp",
        "src/ui/Text.cpp",
        "src/ui/Page.cpp",
        "src/ui/Button.cpp",
        "src/ui/Frame.cpp",
        "src/entities/Entity.cpp",
        "src/entities/Player.cpp",
        "src/entities/Enemy.cpp",
        "src/entities/Bullet.cpp",
        "src/core/StateStack.cpp",
        "-std=c++20",
        "-Iinclude",
        "-IC:/msys64/mingw64/include",
        "-LC:/msys64/mingw64/lib",
        "-lsfml-graphics",
        "-lsfml-window",
        "-lsfml-system",
        "-o",
        "main.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}